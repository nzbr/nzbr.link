<!doctype html>
<html lang='en'>

<head>
  <meta charset='utf-8'>

  <title>Links - nzbr.link</title>

  <meta name='description' content='Links to my profiles on various websites (Mastodon, GitHub, etc)'>
  <meta name='theme-color' content='#00ff00'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>

  <link rel='stylesheet' href='css/main.scss'>
</head>

<body>

<div id='center-card'>
  <div id="router-outlet">
    <div id="default-page">

      <header>
        <div id='avatar-border'>
          <img src='img/avatar.webp' alt='Avatar' id='avatar'>
        </div>
      </header>

      <main>
        <h1 id='title'>
          <span class='green'>nzbr</span><span class='grey'>.link</span>
        </h1>

        <div id='buttons'>
          {{#each buttons}}
            <a rel='me' class='button' href='{{ url }}'>
              <div class='text'>
                <div class='icon-container'>
                  <img class='icon' src='{{ icon }}' alt='{{ label }}' width='16px' height='16px' />
                </div>
                <div class='label'>
                  {{ label }}
                </div>
              </div>
            </a>
          {{/each}}
        </div>
      </main>

      <footer>
        <div>
          Avatar by <a href='https://twitter.com/Sir_Lorart'>Lorart</a>
        </div>
        <div class='center'>
          <a href='https://github.com/nzbr/nzbr.link'>Source</a>
        </div>
        <div>
          <a id='impressum' href='./impressum.hbs' router-link="impressum">Impressum</a>
        </div>
      </footer>

    </div>
  </div>
</div>

</body>

<link rel='stylesheet' href='fonts/stylesheet.scss'>
<script src='js/router.tsx' type='module'></script>

</html>
